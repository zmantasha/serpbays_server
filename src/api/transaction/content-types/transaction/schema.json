{
  "kind": "collectionType",
  "collectionName": "transactions",
  "info": {
    "singularName": "transaction",
    "pluralName": "transactions",
    "displayName": "Transaction",
    "description": "Tracks all wallet transactions including deposits, withdrawals, and escrow operations"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "type": {
      "type": "enumeration",
      "enum": [
        "deposit",
        "escrow_hold",
        "escrow_release",
        "fee",
        "refund",
        "payout"
      ],
      "required": true,
      "description": "Type of transaction"
    },
    "amount": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "description": "Transaction amount"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "success",
        "failed"
      ],
      "default": "pending",
      "description": "Transaction status"
    },
    "gateway": {
      "type": "enumeration",
      "enum": [
        "razorpay",
        "paypal",
        "stripe"
      ],
      "description": "Payment gateway used"
    },
    "gatewayTransactionId": {
      "type": "string",
      "description": "Transaction ID from the payment gateway"
    },
    "metadata": {
      "type": "json",
      "description": "Additional transaction information"
    },
    "user_wallet": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::user-wallet.user-wallet",
      "inversedBy": "transactions",
      "description": "Associated wallet"
    }
  }
}

