{
  "kind": "collectionType",
  "collectionName": "contents",
  "info": {
    "singularName": "content",
    "pluralName": "contents",
    "displayName": "Content",
    "description": "Content management for the application"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 3
    },
    "description": {
      "type": "text",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "draft",
        "published",
        "archived"
      ],
      "default": "draft",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "createdBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "admin::user",
      "configurable": false,
      "private": true,
      "plugin": "admin"
    },
    "updatedBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "admin::user",
      "configurable": false,
      "private": true,
      "plugin": "admin"
    }
  }
} 