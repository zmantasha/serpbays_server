{
  "kind": "collectionType",
  "collectionName": "user_wallets",
  "info": {
    "singularName": "user-wallet",
    "pluralName": "user-wallets",
    "displayName": "User-Wallet",
    "description": "Wallet system for advertisers and publishers"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "type": {
      "type": "enumeration",
      "enum": [
        "advertiser",
        "publisher"
      ],
      "required": true,
      "unique": false
    },
    "currency": {
      "type": "string",
      "default": "USD",
      "required": true
    },
    "balance": {
      "type": "decimal",
      "default": 0,
      "required": true,
      "min": 0
    },
    "escrowBalance": {
      "type": "decimal",
      "default": 0,
      "required": true,
      "min": 0
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "active",
        "suspended",
        "closed"
      ],
      "default": "active",
      "required": true
    },
    "users_permissions_user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "user_wallet"
    },
    "transactions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::transaction.transaction",
      "mappedBy": "user_wallet"
    }
  }
}

