{
  "kind": "collectionType",
  "collectionName": "user_wallets",
  "info": {
    "singularName": "user-wallet",
    "pluralName": "user-wallets",
    "displayName": "User Wallet",
    "description": "User wallet for managing funds and transactions"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "type": {
      "type": "enumeration",
      "enum": [
        "advertiser",
        "publisher"
      ],
      "default": "advertiser",
      "required": true
    },
    "currency": {
      "type": "string",
      "default": "USD",
      "required": true
    },
    "balance": {
      "type": "decimal",
      "default": 0,
      "required": true
    },
    "escrowBalance": {
      "type": "decimal",
      "default": 0,
      "required": true
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "user_wallet"
    },
    "transactions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::wallet-transaction.wallet-transaction",
      "mappedBy": "wallet"
    }
  }
}
