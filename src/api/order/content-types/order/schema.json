{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": "Link building orders between advertisers and publishers"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "createdAt": {
      "type": "timestamp"
    },
    "updatedAt": {
      "type": "timestamp"
    },
    "orderStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "accepted",
        "rejected",
        "delivered",
        "approved",
        "completed",
        "cancelled",
        "disputed"
      ],
      "default": "pending",
      "required": true
    },
    "totalAmount": {
      "type": "decimal",
      "min": 0.01,
      "required": true
    },
    "escrowHeld": {
      "type": "decimal",
      "min": 0,
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "deliveryProof": {
      "type": "string"
    },
    "orderDate": {
      "type": "datetime",
      "required": true
    },
    "acceptedDate": {
      "type": "datetime"
    },
    "rejectedDate": {
      "type": "datetime"
    },
    "rejectionReason": {
      "type": "text"
    },
    "deliveredDate": {
      "type": "datetime"
    },
    "completedDate": {
      "type": "datetime"
    },
    "disputeDate": {
      "type": "datetime"
    },
    "isOutsourced": {
      "type": "boolean",
      "default": false,
      "description": "Whether this order is for outsourced content"
    },
    "website": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::marketplace.marketplace",
      "inversedBy": "orders"
    },
    "advertiser": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "advertiserOrders"
    },
    "publisher": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "publisherOrders"
    },
    "transactions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::transaction.transaction",
      "mappedBy": "order"
    },
    "orderContent": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::order-content.order-content",
      "mappedBy": "order"
    },
    "outsourcedContent": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::outsourced-content.outsourced-content",
      "mappedBy": "order"
    },
    "communications": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::communication.communication",
      "mappedBy": "order"
    },
    "project": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::project.project",
      "inversedBy": "orders"
    },
    "revisionRequestedAt": {
      "type": "datetime",
      "description": "When the revision was requested"
    },
    "revisionDeadline": {
      "type": "datetime",
      "description": "Deadline for completing the revision"
    },
    "revisionStatus": {
      "type": "enumeration",
      "enum": [
        "requested",
        "in_progress",
        "completed"
      ],
      "description": "Current status of the revision request"
    },
    "websiteSnapshot": {
      "type": "json",
      "description": "Snapshot of marketplace/website data at the time of order creation to preserve historical state"
    },
    "websiteUrl": {
      "type": "string",
      "description": "Website URL at time of order (snapshot)"
    },
    "websitePrice": {
      "type": "integer",
      "description": "Website price at time of order (snapshot)"
    },
    "websiteLinkInsertionPrice": {
      "type": "integer",
      "description": "Link insertion price at time of order (snapshot)"
    },
    "websiteMinWordCount": {
      "type": "integer",
      "description": "Minimum word count at time of order (snapshot)"
    },
    "websiteGuidelines": {
      "type": "text",
      "description": "Guidelines at time of order (snapshot)"
    },
    "websiteBacklinkType": {
      "type": "string",
      "description": "Backlink type at time of order (snapshot)"
    },
    "websiteBacklinkValidity": {
      "type": "string",
      "description": "Backlink validity at time of order (snapshot)"
    },
    "websiteCategory": {
      "type": "json",
      "description": "Website categories at time of order (snapshot)"
    },
    "websitePublisherName": {
      "type": "string",
      "description": "Publisher name at time of order (snapshot)"
    },
    "websitePublisherEmail": {
      "type": "string",
      "description": "Publisher email at time of order (snapshot)"
    },
    "websitePublisherPrice": {
      "type": "integer",
      "description": "Publisher price at time of order (snapshot)"
    },
    "websiteTat": {
      "type": "integer",
      "description": "Turnaround time at time of order (snapshot)"
    },
    "websiteDofollowLink": {
      "type": "integer",
      "description": "Dofollow link count at time of order (snapshot)"
    },
    "websiteFastPlacement": {
      "type": "boolean",
      "description": "Fast placement status at time of order (snapshot)"
    },
    "websiteAhrefsDr": {
      "type": "integer",
      "description": "Ahrefs DR at time of order (snapshot)"
    },
    "websiteAhrefsTraffic": {
      "type": "integer",
      "description": "Ahrefs traffic at time of order (snapshot)"
    },
    "websiteMozDa": {
      "type": "integer",
      "description": "Moz DA at time of order (snapshot)"
    },
    "websiteLanguage": {
      "type": "json",
      "description": "Website languages at time of order (snapshot)"
    },
    "websiteCountries": {
      "type": "json",
      "description": "Website countries at time of order (snapshot)"
    }
  }
}
